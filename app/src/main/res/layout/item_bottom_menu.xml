<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item_btm"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_btm_img_on"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_home_off"
        android:layout_above="@id/item_btm_tv"/>

    <ImageView
        android:id="@+id/item_btm_img_off"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_home_on"
        android:layout_above="@id/item_btm_tv"/>

    <TextView
        android:id="@+id/item_btm_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textStyle="bold"
        android:text="this"/>

</RelativeLayout>